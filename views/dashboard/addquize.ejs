<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Add Quize-Quizeee! Check your IQ</title>

    <%- include('./sheets.ejs'); %>
</head>

<body>
    <div class="bmd-layout-container bmd-drawer-f-l bmd-drawer-overlay">
        <%- include('./partials/sidenav.ejs'); %>
        <main class="bmd-layout-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <% if(messages.success) { %>
                        <div class="messages">
                            <p><%= messages.success %></p>
                        </div>
                        <% } %>
                        <h3 class="title">Add Quize!</h3>
                        <form action="admin/dashboard/addquize" method="post">
                            <div class="form-group">
                                <label for="question">Question</label>
                                <input type="text" class="form-control" name="question" id="question"
                                    aria-describedby="emailHelp" placeholder="Enter question">
                            </div>
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="answerRadio" id="answerRadio"
                                    value="0">
                                <input type="text" class="form-control" name="answer" aria-describedby="emailHelp"
                                    placeholder="Enter answer">
                            </div>
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="answerRadio" id="answerRadio"
                                    value="1">
                                <input type="text" class="form-control" name="answer" aria-describedby="emailHelp"
                                    placeholder="Enter answer">
                            </div>
                            <div class="form-group">
                                <input class="form-check-input" type="radio" name="answerRadio" id="answerRadio"
                                    value="2">
                                <input type="text" class="form-control" name="answer" aria-describedby="emailHelp"
                                    placeholder="Enter answer">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                            <% if(messages) { %>
                            <div class="messages">
                                <p><%= messages.warning %></p>
                            </div>
                            <% } %>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="info-copy">
                            <p>&copy;2020 All Rights Are Reserved!</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script>
        const getNavBtn = document.querySelector('.logout-nav');
        getNavBtn.addEventListener('click', (e) => {
            const getMenu = document.querySelector('.menu-toggle');
            getMenu.classList.toggle('show-menu');
        });
    </script>
</body>

</html>